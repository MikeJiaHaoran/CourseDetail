<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_course_list_select_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:text="时间"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0"
        android:textSize="14dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridView
        android:id="@+id/gridivew_course_list_select_condition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:numColumns="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_course_list_select_title" />



    <TextView
        android:id="@+id/tv_filter_reset_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="@drawable/shape_corners_str_reset"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridivew_course_list_select_condition"
        app:layout_constraintRight_toLeftOf="@id/tv_filter_sure_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="16dp"
        android:text="重置"
        android:textColor="#EB002A"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/tv_filter_sure_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/shape_corners_solid_22_eb002a"
        app:layout_constraintTop_toBottomOf="@id/gridivew_course_list_select_condition"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_filter_reset_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="14dp" />



</androidx.constraintlayout.widget.ConstraintLayout>