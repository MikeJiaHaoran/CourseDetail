<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constrainedWidth="true"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="8dp"
    android:background="@color/white"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    >

    <TextView
        android:id="@+id/tv_courses_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:lineSpacingExtra="24dp"
        android:text="呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜"
        android:textColor="#212831"
        android:textSize="16sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_school_time_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="74dp"
        android:text="呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constrainedWidth="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_courses_name" />

    <TextView
        android:id="@+id/tv_courses_difficult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:lineSpacingExtra="14dp"
        android:textColor="#5B6169"
        android:text="难度"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_school_time_name" />

    <RatingBar
        android:id="@+id/difficult_stars"
        style="@style/FiveStarsStyle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:isIndicator="true"
        android:progressTint="#FFB92C"
        app:layout_constraintLeft_toRightOf="@id/tv_courses_difficult"
        app:layout_constraintTop_toBottomOf="@id/tv_school_time_name" />

    <com.example.coursedetail.View.CoursesListTeacherInfo
        android:id="@+id/view_teacher_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_courses_difficult" />

    <com.example.coursedetail.View.CoursesListTeacherInfo
        android:id="@+id/view_assist_teacher_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintRight_toLeftOf="@id/view_foreign_teacher_info"
        app:layout_constraintLeft_toRightOf="@id/view_teacher_info"
        app:layout_constraintTop_toBottomOf="@id/tv_courses_difficult"
        />


    <com.example.coursedetail.View.CoursesListTeacherInfo
        android:id="@+id/view_foreign_teacher_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginRight="115dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_courses_difficult" />

    <ImageView
        android:id="@+id/courses_list_divided_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="#F3F3F4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_teacher_info"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_desc_nums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="18dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜呜"
        android:textColor="#5B6169"
        android:textSize="12sp"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_original_sale_money"
        app:layout_constraintTop_toBottomOf="@id/courses_list_divided_line" />

    <TextView
        android:id="@+id/tv_resale_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:lineSpacingExtra="18dp"
        android:textColor="#EB002A"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/courses_list_divided_line" />

    <TextView
        android:id="@+id/tv_original_sale_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_marginRight="5dp"
        android:lineSpacingExtra="12dp"
        android:textColor="#878E9A"
        android:textSize="12sp"
        app:layout_constraintRight_toLeftOf="@id/tv_resale_money"
        app:layout_constraintTop_toBottomOf="@id/courses_list_divided_line" />

</androidx.constraintlayout.widget.ConstraintLayout>